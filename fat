    <script>
const fatoriais = () => {
 let fat = 1
 let num = +prompt(`Digite o número que deseja saber o fatorial`)
        for(let c=1; c<=num; c++){
            fat*=c
        }
        document.write(`O fatorial de ${num} é igual á ${fat}`)
    }
fatoriais()
    </script>
